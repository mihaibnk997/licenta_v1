        </div>
        
        <div class="wrapper">

        <div id = "chart"></div>

        <script>
            function getData() {
                return Math.random();
            }

            Plotly.plot('chart', [{
                y:[getData()],
                type:'scatter'
            }]);

            let cnt = 0;

            setInterval(() => {

                Plotly.extendTraces('chart', {y:[[getData()]]}, [0]);
                cnt ++;

                if(cnt > 500) {
                    Plotly.relayout('chart', {
                        xaxis: {
                            range: [cnt-500, cnt]
                        }
                    })
                }

            }, 20);

        </script>

